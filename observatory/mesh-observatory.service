[Unit]
Description=Wildcat Mesh Observatory Dashboard
After=multi-user.target network-online.target
Wants=network-online.target

[Service]
Type=simple
Restart=always
RestartSec=10
User=seth
WorkingDirectory=/home/seth/mesh-observatory
ExecStart=/home/seth/mesh-observatory/venv/bin/python3 /home/seth/mesh-observatory/app.py

[Install]
WantedBy=multi-user.target
